@model AVONmo.Models.ViewModels.CremaViewModel
@{
    ViewData["Title"] = "Actualizar Crema";
}

<h1>Pagina de Actualización de Producto</h1>

<form asp-action="UpdateCrema" method="post">

    <input asp-for=Crema.IdCategoria type="hidden" />
    <input asp-for=Crema.IdProducto class="form-control" type="hidden"/>
    Nombre Producto:
    <input asp-for=Crema.Descripcion required class="form-control" />
    <br />
    <input asp-for=Crema.IdPrecio type="hidden"/>
    <input asp-for=Precio.IdPrecio type="hidden"/>
    Precio:
    <input asp-for="Precio.Cantidad" type="number" step="0.01" required class="form-control" />
    <br />
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("Cremas")" class="btn btn-secondary">Cancelar</a>
</form>
