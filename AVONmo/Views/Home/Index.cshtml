@model Tuple<List<Categorium>,List<Menu>>
<style>

    .categoria {
        border: 1px solid #294;
        padding: 10px;
        margin-bottom: 20px;
    }
</style>
@{
    ViewData["Title"] = "Home Page";
}



@for (int i = 0; i < Model.Item1.Count; i++)
{
    <div class="categoria shadow-lg">
        <h2><a asp-controller="Home" asp-action="@Model.Item1[i].Titulo">@Model.Item1[i].Titulo</a></h2>
        <div>
        <p>@Model.Item1[i].Descripcion</p>
        </div>
    </div>
}

