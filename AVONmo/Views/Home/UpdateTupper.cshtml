@model AVONmo.Models.ViewModels.TupperViewModel
@{
    ViewData["Title"] = "Actualizar Crema";
}

<h1>Pagina de Actualización de Producto</h1>

<form asp-action="UpdateTupper" method="post">

    <input asp-for=Tupper.IdCategoria type="hidden" />
    <input asp-for=Tupper.IdProducto class="form-control" type="hidden" />
    Nombre Producto:
    <input asp-for=Tupper.Descripcion required class="form-control" />
    <br />
    <input asp-for=Tupper.IdPrecio type="hidden" />
    <input asp-for=Precio.IdPrecio type="hidden" />
    Precio:
    <input asp-for="Precio.Cantidad" type="number" step="0.01" required class="form-control" />
    <br />
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("Tuppers")" class="btn btn-secondary">Cancelar</a>
</form>
